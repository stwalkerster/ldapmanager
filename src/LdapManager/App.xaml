<Application x:Class="LdapManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:startup="clr-namespace:LdapManager.Startup"
             xmlns:converter="clr-namespace:LdapManager.Converter">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <startup:ApplicationBootstrapper x:Key="bootstrapper" />

                    <converter:WindowTitleConverter x:Key="WindowTitleConverter" />
                </ResourceDictionary>

                <ResourceDictionary Source="pack://application:,,,/Fluent;component/Themes/Office2013/Generic.xaml" />
                
                <ResourceDictionary Source="Styles/Style.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>
</Application>
